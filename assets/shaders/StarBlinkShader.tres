[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform vec4 bg_color = vec4(0, 0, 0.1, 1);
uniform float speed = 5;
uniform vec2 position;

void fragment() {
	float visibility = (sin((TIME + position.x + position.y) * speed) + 1.0) / 2.0;
	COLOR = bg_color * (1.0 - visibility) + vec4(1, 1, 1, 1) * visibility;
}"
